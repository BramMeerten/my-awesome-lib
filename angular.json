{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "",
  "projects": {
    "my-awesome-lib": {
      "projectType": "library",
      "root": "core",
      "sourceRoot": "core/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "tsConfig": "core/tsconfig.lib.json",
            "project": "core/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "core/tsconfig.lib.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "core/src/test.ts",
            "tsConfig": "core/tsconfig.spec.json",
            "karmaConfig": "core/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "core/tsconfig.lib.json",
              "core/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "my-awesome-lib",
  "cli": {
    "analytics": false
  }
}
